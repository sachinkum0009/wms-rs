# Database Configuration
# Copy this file to .env and update the values for your environment

# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://wms_user:wms_password@localhost:5432/wms_dev

# Connection Pool Settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=1
DB_CONNECTION_TIMEOUT_SECS=30
DB_IDLE_TIMEOUT_SECS=600

# Logging Level
RUST_LOG=wms_db=info,sqlx=warn

# Example for different environments:
# Development: DATABASE_URL=postgresql://wms_user:wms_password@localhost:5432/wms_dev
# Testing:     DATABASE_URL=postgresql://wms_user:wms_password@localhost:5432/wms_test
# Production:  DATABASE_URL=postgresql://wms_user:wms_password@prod-db:5432/wms_prod